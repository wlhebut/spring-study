<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ta.mapper.BlogMapper">


    <select id="select" resultType="Blog">
      select * from blog;
    </select>
    <select id="selectByName" parameterType="map" resultType="Blog">

      select * from user where name like #{userName};

    </select>
    <select id="queryBlogIf" parameterType="map" resultType="Blog">

      select * from blog where id = #{id};

    </select>

    <insert id="addBlog" parameterType="Blog">
        insert into blog values (#{id}, #{title}, #{author}, #{createTime}, #{views});
    </insert>

</mapper>